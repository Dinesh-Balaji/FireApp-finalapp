<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update"
    android:background="@drawable/bg"
    android:orientation="vertical"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        app:itemBackground="@null"
        app:itemTextColor="#000"
        app:itemIconTint="#000"
        app:menu="@menu/navigation_student"
        app:labelVisibilityMode="selected"
        android:layout_alignParentBottom="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pid3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:paddingLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pid1"
        android:layout_below="@+id/pid3"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pid2"
        android:layout_below="@+id/pid1"
        android:layout_marginLeft="10dp"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textColor="#fff"
        android:paddingLeft="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/pid2"
        android:layout_marginTop="15dp"
        android:background="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t111"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/pid1"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:text="Choose your elective(s)  "
        android:textColor="#fff"
        android:paddingLeft="10dp"/>

    <CheckBox
        android:id="@+id/checkid1"
        android:layout_below="@+id/t111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Theory"
        android:textSize="18sp"
        android:textColor="#000"
        android:backgroundTint="#181616"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <CheckBox
        android:id="@+id/checkid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkid1"
        android:text="Cloud Computing"
        android:textColor="#000"
        android:backgroundTint="#181616"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <CheckBox
        android:id="@+id/checkid3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkid2"
        android:text="Android"
        android:textColor="#000"
        android:backgroundTint="#181616"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <CheckBox
        android:id="@+id/checkid4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIP"
        android:layout_below="@id/checkid3"
        android:backgroundTint="#181616"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <CheckBox
        android:id="@+id/checkid5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pattern Recognition"
        android:backgroundTint="#181616"
        android:textSize="18sp"
        android:layout_below="@id/checkid4"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <CheckBox
        android:id="@+id/checkid6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neural Networks"
        android:textSize="18sp"
        android:backgroundTint="#181616"
        android:layout_below="@+id/checkid5"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateid"
        android:text="Update"
        android:layout_below="@+id/checkid6"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/button_round1"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onclickbuttonMethod"
        />
</RelativeLayout>