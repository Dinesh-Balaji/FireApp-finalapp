<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info_activity"
    android:background="@drawable/bg"
    android:orientation="vertical">


    <EditText
        android:id="@+id/extramailid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="#fff"
        android:hint="Type Email-ID(s) here"
        android:backgroundTint="#181616"/>

    <TextView
        android:id="@+id/mailboxid"
        android:layout_below="@+id/extramailid"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_round"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:text="Email-IDs here..."
        android:textStyle="italic" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/mailboxid"
        android:text="Add"
        android:background="#EC5789"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:id="@+id/addid"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/addid"
        android:background="@drawable/button_round1"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:id="@+id/submitid"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/submitid"
        android:layout_height="wrap_content"
        android:id="@+id/listid"
        android:layout_above="@+id/bottom_navigation"
        android:layout_weight="1">
    </ListView>

</RelativeLayout>